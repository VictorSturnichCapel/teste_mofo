@{
  string _classSearch = Session["idEventList"] == null ? "search" : "filterListEventsProducts";
  string _classMiniCart = Session["idEventList"] == null && Session["EventList"] == null ? "mini-cart" : "mini-cart-list-event";
}
<div class="ui container fluid _header">
    <div class="ui container">
        <div class="ui middle aligned four column centered grid">
            <div class="row">

                <div class="ui seven wide mobile five wide tablet four wide computer column">
                    <a href="/Home" title="Página Inicial">
                        <img class="ui middle aligned image logo" src="/assets/image/logo/logo.png" alt="@LojaCorp.Control.Company._Company.FantasyName" title="@LojaCorp.Control.Company._Company.FantasyName">
                    </a>
                </div>

                <div class="ui center aligned three wide tablet five wide computer only column">
                   <!-- ~/Views/Shared/Common/_Menu.cshtml -->
                    @Html.Action("Menu", "Home")
                </div>

                <div class="ui center aligned three wide tablet three wide computer column searchcolumn">
                    <div class="ui category @_classSearch">
                        <div class="ui icon input fluid">
                            <input class="prompt" type="text" placeholder="Buscar...">
                            <i class="search icon"></i>
                        </div>
                        <div class="results"></div>
                    </div>
                </div>
                @{
                    bool isb2b = Session["segment"] != null && Session["segment"].ToString() == "b2b" ? true : false;
                    DomainAssistedSale.Entities.Seller _assistedSale = (DomainAssistedSale.Entities.Seller)Session["Seller"];
                    bool isAssistedSale = _assistedSale != null ? true : false;

                    if (!isb2b && !isAssistedSale)
                    {
                       
                    }
                }
                <div class="ui right aligned five wide tablet four wide computer only column">

                    <a  href="/customer" style="margin-right:5px" target="_blank">
                        <img class="iconesh" src="/assets/image/logo/icon-login.png" alt="Minha Conta" title="Minha Conta">
                    </a>

                    <a href="/Customer/WishList" style="margin-right:5px" target="_blank">
                        <img class="iconesh" src="/assets/image/logo/icon-coracao.png" alt="Favoritos" title="Favoritos">
                    </a>

                        <div id="cartButton" class="ui labeled button cartbutton no margin bottom mini-cart"  tabindex="0" data-segment="b2c">
                        <div>
                            <img class="iconesh" src="/assets/image/logo/icon-carrinho.png" alt="Meu Pedido" title="Meu Pedido">
                            <a class="ui circular label" id="total_itens_card">
                            @{
                                if (Session["EventList"] == null)
                                {
                                @Html.Action("TotalItensCart", "Checkout")
                                }
                                else
                                {
                                @Html.Action("TotalItensList", "EventList")
                                }
                            }
                            </a>
                        </div>
                    </div>
                </div>
                    
                        <div class="ui searchMobile mobile only">
                            <div class="ui button icon centered">
                                <i class="search icon"></i>
                            </div>
                            <div class="ui blocoBusca @_classSearch">
                                <div class="ui input fluid blocoBuscaContainer">
                                    <input class="prompt" type="text" placeholder="Buscar...">
                                    <i class="search icon search-results"></i>
                                    <i class="close icon disabled" id="closeResultsMobile"></i>
                                </div>
                                <div class="results"></div>
                            </div>
                        </div>                    

                    <div class="ui center aligned five wide mobile only column">

                        <div id="cartButton" class="ui labeled button cartbutton no margin bottom mini-cart"  tabindex="0" data-segment="b2c">
                            <div>
                                <img class="iconesh" src="/assets/image/logo/icon-carrinho.png" alt="Meu Pedido" title="Meu Pedido">
                                <a class="ui circular label" id="total_itens_card">
                                @{
                                    if (Session["EventList"] == null)
                                    {
                                    @Html.Action("TotalItensCart", "Checkout")
                                    }
                                    else
                                    {
                                    @Html.Action("TotalItensList", "EventList")
                                    }
                                }
                                </a>
                            </div>
                        </div>

                    </div>

                    
                <div class="ui center aligned two wide mobile only column" style="padding:0px;">
                   <!-- ~/Views/Shared/Common/_Menu.cshtml -->
                    @Html.Action("Menu", "Home")
                </div>

            </div>
        </div>
    </div>
</div>

